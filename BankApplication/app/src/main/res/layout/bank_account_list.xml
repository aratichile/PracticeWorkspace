<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.BankAccountListActivity"
    tools:showIn="@layout/activity_bank_account_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="18dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"
            app:civ_border_color="#8FBFE0"
            app:civ_border_width="2dp"
            android:src="@drawable/circle_yellow"
            />
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/ifsc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12223334"
                />
            <TextView
                android:id="@+id/accountnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="534372455435"
                />
            <TextView
                android:id="@+id/accountholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asmita"
                />
            <TextView
                android:id="@+id/mobilenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9876245367"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>